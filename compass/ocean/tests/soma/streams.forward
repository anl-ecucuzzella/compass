<streams>

<immutable_stream name="mesh"
                  filename_template="mesh.nc"/>

<immutable_stream name="input"
                  filename_template="init.nc"/>

<immutable_stream name="restart"
        output_interval="{{ restart_interval }}"/>

<stream name="output"
        clobber_mode="truncate"
        output_interval="{{ output_interval }}">

    <stream name="mesh"/>
    <var_struct name="tracers"/>
    <var name="layerThickness"/>
    <var name="normalVelocity"/>
    <var name="ssh"/>
    <var name="maxLevelEdgeTop"/>
    <var name="edgeMask"/>
    <var name="vertexMask"/>
    <var name="cellMask"/>
    <var name="xtime"/>
    <var name="kineticEnergyCell"/>
    <var name="relativeVorticityCell"/>
    <var name="velocityZonal"/>
    <var name="velocityMeridional"/>
    <var name="divergence"/>
    <var name="potentialDensity"/>
    <var name="boundaryLayerDepth"/>
    <var name="BruntVaisalaFreqTop"/>
    <var name="dThreshMLD"/>
    <var name="vertDiffTopOfCell"/>
    <var name="normalTransportVelocity"/>
    <var name="activeTracerHorizontalAdvectionEdgeFlux"/>
    <var name="activeTracerVerticalAdvectionTopFlux"/>
    <var name="activeTracerVertMixTendency"/>
    <var name="activeTracerHorMixTendency"/>
</stream>

<stream name="forcing_data"
        filename_template="forcing.nc">

    <var_array name="activeTracersPistonVelocity"/>
    <var_array name="activeTracersSurfaceRestoringValue"/>
    <var name="windStressZonal"/>
    <var name="windStressMeridional"/>
</stream>

<stream name="mixedLayerDepthsOutput"
        output_interval="stream:output:output_interval"
        clobber_mode="truncate"
        precision="double"/>

</streams>
